<h1 class="text-center">Articles</h1>
<br/>
<% if @categories.empty? %>
    <p>Whoops, looks like they're no articles at the moment.</p>
<% else %>
    <% @categories.each do |category|%>
        <div class="container">
            <br/>
            <h2>Category: <%= category %></h2>
            <br/>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% Article.latest_three_articles_per(category).each do |article| %>
                    <%= render partial: 'layouts/card_format', locals: { article: article } %>
                <% end %>
            </div>
        </div>
    <% end %>
<% end %>
