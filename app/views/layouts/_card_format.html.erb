<div class="col">
    <div class="card">
        <h5 class="card-header"><%= article.category %></h5>
        <div class="card-body text-dark">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-subtitle mb-2 text-muted">Created by: <%= article.user.email %></p>
            <br/>
            <p class="card-text"><%= article.content %></p>
            <br/>
            <div class="container h-100">
                <div class="d-flex h-100">
                    <% if article_showing?(article.id) %>
                        <div class="align-self-start mr-auto">
                            <%= button_to "Back", articles_path, method: :get, class: "btn btn-outline-dark" %>
                        </div>
                    <% else %>
                        <div class="align-self-start mr-auto">
                            <%= button_to "View Article", article_path(article.id), method: :get, class: "btn btn-outline-dark" %>
                        </div>
                    <% end %>
                    <% if editor?(article) %>
                        <div class="align-self-center mx-auto">
                            <%= button_to "Edit Article", edit_article_path(article.id), method: :get, class: "btn btn-outline-warning" %>
                        </div>
                        <div class="align-self-end ml-auto">
                            <%= button_to "Delete Article", article_path(article.id), method: :delete, class: "btn btn-outline-danger", data: {confirm: 'Are you sure you want to delete this article?'} %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>